{% stylesheet %}
  .contact-section {
    padding: 60px 20px;
    background: white;
  }

  .contact-section__container {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .contact-section__title {
    font-size: 32px;
    font-weight: bold;
    color: #333;
    margin: 0 0 16px 0;
  }

  .contact-section__description {
    font-size: 18px;
    color: #666;
    margin-bottom: 40px;
  }

  .contact-section__content {
    background: #f9f9f9;
    border-radius: 12px;
    padding: 40px 20px;
  }

  .contact-section__features {
    display: flex;
    justify-content: center;
    gap: 32px;
    margin-bottom: 40px;
  }

  .contact-section__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    max-width: 120px;
  }

  .contact-section__feature-icon {
    font-size: 32px;
  }

  .contact-section__feature-text {
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  .contact-section__info {
    text-align: center;
  }

  .contact-section__info h3 {
    margin: 0 0 20px 0;
    font-size: 20px;
    color: #333;
  }

  .contact-section__details {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-bottom: 30px;
    text-align: left;
  }

  .contact-section__item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: white;
    border-radius: 8px;
  }

  .contact-section__icon {
    font-size: 20px;
    min-width: 24px;
  }

  .contact-section__text {
    color: #333;
    font-size: 16px;
  }

  .contact-section__message {
    padding: 20px;
    background: white;
    border-radius: 8px;
  }

  .contact-section__message h4 {
    margin: 0 0 12px 0;
    font-size: 18px;
    color: #333;
  }

  .contact-section__message p {
    margin: 0;
    color: #666;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .contact-section {
      padding: 40px 20px;
    }

    .contact-section__title {
      font-size: 24px;
    }

    .contact-section__features {
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    .contact-section__content {
      padding: 30px 15px;
    }
  }
{% endstylesheet %}

